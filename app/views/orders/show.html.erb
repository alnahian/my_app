<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @order.name %>
</p>

<p>
  <b>Address:</b>
  <%= @order.address %>
</p>

<p>
  <b>Email:</b>
  <%= @order.email %>
</p>

<p>
  <b>Pay type:</b>
  <%= @order.pay_type %>
</p>

<p>
<%= render @order.line_items %>
<td class="total_cell">Total : <%= number_to_currency(@order.total_price) %></td>
</br>
</p>
</br>

<p>
  <b>Paid amount:</b>
  <%= number_to_currency(@order.paid_amount) %>
</p>

<p>
  <b>Due amount:</b>
  <%= number_to_currency(@order.current_due) %>
</p>

<p>
  <b>Published at:</b>
  <%= @order.published_at.strftime('%F %A %R ') %>
</p>

<p id="pdf_link"><%= link_to "Download Invoice (PDF)", order_path(@order, :format => "pdf") %></p>



